{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Ultraliser",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.buildDirectory}/bin/voxelviewer",
            "cwd": "${command:cmake.buildDirectory}/bin",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}